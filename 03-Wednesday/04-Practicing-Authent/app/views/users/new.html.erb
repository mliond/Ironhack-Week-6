<h1>Sign up</h1> 

<%= form_for @user do |f| %>
  <div id="name">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div id="email">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div id="password">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div id="password_confirmation">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div id="submit">
    <%= f.submit 'Sign up' %>
  </div>
<% end %>