<h1>User details</h1>

<p>
  Welcome, <%= @user.email %>
</p>
<p>
  Your products:
  <ul>
    <% @user.products.each do |i| %>
      <li>
        <%= link_to i.name, product_path(i) %>
      </li>
    <% end %>
  </ul>
</p>
<p>
  Your bids:
  <ul>
    <% @user.bids.each do |i| %>
      <li>
        <%= i.product.name %>: <%= i.amount %>
      </li>
    <% end %>
  </ul>
</p>
<p>
  Your reviews:
  <ul>
    <% @user.reviews.each do |i| %>
    <li>
      <%= i.product.name %>: <%= i.description %>
      <%= link_to "Edit", edit_product_review_path(id: i.id, product_id: i.product.id) %>
    </li>
    <% end %>
  </ul>
</p>